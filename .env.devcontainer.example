# DevContainer Environment Variables
# Copy this file to .env.devcontainer and fill in your actual values

# GitHub CLI Configuration
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# Core Rails Environment
RAILS_ENV=development
NODE_ENV=development

# OAuth Credentials (optional for development)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# API Integrations (optional for development)
SLEEPER_API_BASE_URL=https://api.sleeper.app/v1
OPENAI_API_KEY=your_openai_api_key

# Database Configuration (defaults work for devcontainer)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/commish_tools_development
POSTGRES_PASSWORD=postgres
PGUSER=postgres
PGPASSWORD=postgres

# Optional: Additional GitHub CLI configuration
GH_EDITOR=code
GH_BROWSER=false

# Optional: Git configuration
GIT_AUTHOR_NAME=Your Name
GIT_AUTHOR_EMAIL=your.email@example.com
GIT_COMMITTER_NAME=Your Name
GIT_COMMITTER_EMAIL=your.email@example.com