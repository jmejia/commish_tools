<div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="flex items-center justify-center mb-6">
        <%= image_tag "commish-tools-logo.png", alt: "CommishTools", class: "h-12 w-auto" %>
      </div>
      <h2 class="text-3xl font-bold text-white mb-2">Welcome back</h2>
      <p class="text-gray-400">Sign in to your account</p>
    </div>

    <!-- Form Container -->
    <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700 rounded-xl p-8 shadow-2xl">
      <!-- Google OAuth Button -->
      <div class="mb-6">
        <%= link_to user_google_oauth2_omniauth_authorize_path, class: "w-full flex items-center justify-center px-4 py-3 border border-gray-600 rounded-lg text-white bg-gray-700/50 hover:bg-gray-600/50 transition-all duration-200 transform hover:scale-105" do %>
          <svg class="w-5 h-5 mr-3" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Sign in with Google
        <% end %>
      </div>

      <!-- Divider -->
      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-600"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-gray-800/50 text-gray-400">Or continue with email</span>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-8") do |f| %>
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your email" %>
        </div>

        <!-- Password Field -->
        <div class="mt-6">
          <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password, 
                autocomplete: "current-password",
                class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all duration-200",
                placeholder: "Enter your password" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center pt-2">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-orange-500 bg-gray-700 border-gray-600 rounded focus:ring-orange-500 focus:ring-2" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-gray-300" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit "Sign In", class: "w-full bg-orange-500 text-white font-semibold py-3 px-6 rounded-lg hover:bg-orange-600 transition-all duration-200 transform hover:scale-105 shadow-lg" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-8 pt-6 border-t border-gray-700">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
