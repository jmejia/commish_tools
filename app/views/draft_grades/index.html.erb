<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Draft Grades</h1>
      <p class="text-gray-600 mt-2"><%= @league.name %> - <%= @league.season_year %> Season</p>
    </div>
    
    <% if @draft_grades.empty? %>
      <%= form_with url: import_league_draft_grades_path(@league), method: :post, local: true do |f| %>
        <%= f.submit "Import Draft & Calculate Grades", 
            class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition" %>
      <% end %>
    <% end %>
  </div>

  <% if @draft_grades.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @draft_grades.each do |grade| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <%= link_to league_draft_grade_path(@league, grade), class: "block p-6" do %>
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-semibold text-gray-900">
                  <%= grade.display_team_name %>
                </h3>
                <p class="text-sm text-gray-600">
                  <%= grade.user.display_name %>
                </p>
              </div>
              
              <div class="text-right">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-full <%= grade_color_class(grade) %> font-bold text-2xl">
                  <%= grade.grade %>
                </div>
              </div>
            </div>
            
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Projected Rank:</span>
                <span class="font-medium">#<%= grade.projected_rank %></span>
              </div>
              
              <div class="flex justify-between">
                <span class="text-gray-600">Projected Wins:</span>
                <span class="font-medium"><%= grade.projected_wins %></span>
              </div>
              
              <div class="flex justify-between">
                <span class="text-gray-600">Playoff Odds:</span>
                <span class="font-medium"><%= (grade.playoff_probability * 100).round %>%</span>
              </div>
            </div>
            
            <div class="mt-4 pt-4 border-t">
              <p class="text-sm text-gray-700 line-clamp-2">
                <%= grade.analysis['summary'] %>
              </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" role="img">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Draft Grades Yet</h3>
      <p class="text-gray-600">Import your league's draft to generate grades and analysis.</p>
    </div>
  <% end %>
</div>