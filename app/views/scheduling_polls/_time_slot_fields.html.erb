<div class="p-4 bg-gray-700/50 rounded-lg border border-gray-600 relative" data-scheduling-poll-target="timeSlot">
  <% unless form.object.persisted? %>
    <button type="button"
            data-action="click->scheduling-poll#removeTimeSlot"
            class="absolute top-2 right-2 text-red-400 hover:text-red-300 transition-colors">
      Ã—
    </button>
  <% end %>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :starts_at, "Date & Time", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.datetime_local_field :starts_at, 
          class: "w-full px-3 py-2 bg-gray-600 border border-gray-500 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
    </div>
    
    <div>
      <%= form.label :duration_minutes, "Duration", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.select :duration_minutes,
          options_for_select([
            ["1 hour", 60],
            ["1.5 hours", 90],
            ["2 hours", 120],
            ["3 hours", 180],
            ["4 hours", 240]
          ], form.object.duration_minutes || 180),
          {},
          class: "w-full px-3 py-2 bg-gray-600 border border-gray-500 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
    </div>
  </div>
  
  <%= form.hidden_field :_destroy %>
</div>